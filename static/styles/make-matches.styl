@import 'colors.styl'
@import 'mixins.styl'
@import 'defaults.styl'

.mm-selection-boxes-container
  width 100%
  min-width 900px

  height 500px

  margin-left auto
  margin-right auto

.mm-selection-box
  width 49.5%
  min-width 400px

  float left
  margin-left .5%

  table
    max-height 400px
    overflow-y auto

.mm-selection-box-title
  font-size 36px

.mm-filter
  width 275px !important
  margin-left auto
  margin-right auto
  margin-bottom 5px

.mm-selection-filters
  margin-top 10px

.mm-matches-container
  width 700px
  height 200px

  margin-left auto
  margin-right auto

  margin-top 40px

  border 10px solid bg-border-color
  border-radius default-border-radius

.mm-matches-item-container
  width 33%
  height 200px

  float left

  button
    margin-top 65px

  p
    margin-top 75px

.mm-modal-tmpl-outer-container
  width 100%
  height 300px

.mm-modal-tmpl-inner-container
  width 50%
  height 250px

  float left

  textarea
    width 90%
    height 225px

.mm-modal-hidden-render-area
  visibility none
